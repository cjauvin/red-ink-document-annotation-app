{
  "manifest_version": 3,
  "name": "Red Ink Uploader",
  "version": "1.0.0",
  "description": "Send documents directly to Red Ink for annotation",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://univ.teluq.ca/*",
    "http://localhost:8001/*",
    "https://encrerouge.ink/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://univ.teluq.ca/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
